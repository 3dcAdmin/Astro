---
import generateHeroImg from './function-generate-hero-img.js'
const getImg = await generateHeroImg()
---
  <picture class="heroImg">
    <source srcset={getImg} media="(min-width:100px)"/>
    <img src='https://source.unsplash.com/600x300/?space,cosmos'
      class='glass'/> 
  </picture>       
<style lang='scss'>

picture{
  --hero-radius: 50px 50px 100px 100px / 60px 60px 20px 20px;
  display: block;
  border-radius: var(--hero-radius);
  >img{
    width: 100%;
    height:15rem;
    box-shadow: inset 5px -2px 7px 0px rgb(185 188 231 / 37%),
          0px 8px 0px 0px var(--theme-divider);
    border-radius: var(--hero-radius);
    object-fit: cover;
  }
}
</style>
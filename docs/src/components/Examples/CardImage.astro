<style lang='scss'>

picture{
  --hero-radius: 50px 50px 100px 100px / 60px 60px 20px 20px;
  display: block;
  border-radius: var(--hero-radius);
  >img{
    width: 100%;
    box-shadow: inset 5px -2px 7px 0px rgb(185 188 231 / 37%),
          0px 8px 0px 0px var(--theme-divider);
    border-radius: var(--hero-radius);
    object-fit: cover;
  }
}


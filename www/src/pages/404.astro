---
import Main from '../components/Main.astro';
import MainHeader from '../components/MainHeader.astro';
import Space from '../components/Space.astro';
---
<html lang="en">
	<head>
        <title>Astro | Page Not Found</title>
        <link rel="stylesheet" href={Astro.resolve('../scss/global.css')} />
    </head>
	<body>
        <Space />
		<Main>
			<MainHeader />
            <section class="error-content">
                <p class="error-code">404 | error</p>
                <h1>Lost in space there, Astronaut?</h1>
                <p>Let's see if we can guide you back</p>
                <a href="/" title="back to homepage">Back to homepage</a>
            </section>
		</Main>
        <style lang="scss">
            section.error-content {
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                p.error-code {
                    color: #ff5d01;
                    text-transform: uppercase;
                }
                h1 {
                    margin-top: -0.5rem;
                    margin-bottom: 1rem;
                    font-size: 2rem;
                }
                p {
                    margin: 1rem 0;
                }
                a {
                    margin: 1rem 0;
                }
            }
        </style>
	</body>
</html>
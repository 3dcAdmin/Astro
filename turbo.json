{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**/*", "!vendor/**", "mod.js", "mod.js.map"],
      "outputMode": "new-only"
    },
    "build:ci": {
      "dependsOn": ["^build:ci"],
      "outputs": ["dist/**/*", "!vendor/**", "mod.js", "mod.js.map"],
      "outputMode": "new-only"
    },
    "dev": {
      "cache": false
    },
    "test": {
      "env": ["RUNNER_OS", "NODE_VERSION"],
      "outputMode": "new-only"
    },
    "benchmark": {
      "dependsOn": ["^build"]
    },
    "lint": {}
  }
}

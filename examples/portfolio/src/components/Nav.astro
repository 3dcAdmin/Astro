---
import Icon from './Icon.astro';

const menu = [
	{ label: 'Home', href: '/' },
	{ label: 'Work', href: '/work/' },
	{ label: 'About', href: '/about/' },
	{ label: 'Contact', href: '/contact/' },
];
---

<style>
	nav {
		font-family: var(--font-brand);
		font-weight: 500;
		padding: 1.5rem 0;
		margin-bottom: 3.5rem;
	}

	.site-title {
		color: var(--accent-dark);
		text-decoration: none;
	}

	.nav-items {
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		font-size: var(--text-md);
		line-height: 1.2;
		list-style: none;
		padding: 2rem;
		background-color: var(--gray-999);
		border-bottom: 1px solid var(--gray-800);
	}

	.link {
		display: inline-block;
		color: var(--gray-300);
		text-decoration: none;
	}

	.link.active {
		color: var(--gray-0);
	}

	.socials {
		display: flex;
		gap: 2rem;
		padding: 1.5rem 2rem;
		font-size: var(--text-xl);
		background-color: var(--gray-999);
		border-radius: 0 0 0.75rem 0.75rem;
		box-shadow: var(--shadow-lg);
	}

	.social {
		text-decoration: none;
		color: var(--accent-dark);
	}

	@media (min-width: 50em) {
		nav {
			display: grid;
			grid-template-columns: 1fr auto 1fr;
			align-items: center;
			padding: 2.5rem 5rem;
		}

		.site-title {
			font-size: var(--text-lg);
		}

		.nav-items {
			position: relative;
			flex-direction: row;
			font-size: var(--text-sm);
			border-radius: 999rem;
			border: 0;
			padding: 0.5rem 0.5625rem;
			background: radial-gradient(var(--gray-900), var(--gray-800));
			box-shadow: var(--shadow-md);
		}

		.nav-items::before {
			position: absolute;
			inset: -1px;
			content: '';
			background: var(--gradient-stroke);
			border-radius: 999rem;
			z-index: -1;
		}

		.link {
			padding: 0.5rem 1rem;
			border-radius: 999rem;
		}

		.link.active {
			border-radius: 999rem;
			color: var(--accent-text-over);
			background-color: var(--accent-regular);
		}

		.socials {
			justify-self: flex-end;
			gap: 1rem;
			padding: 0;
			background-color: transparent;
			box-shadow: none;
		}
	}
</style>

<nav>
	<a href="/" class="site-title">Jeanine White</a>
	<ul class="nav-items">
		{
			menu.map(({ label, href }) => (
				<li>
					<a class:list={['link', { active: Astro.url.pathname === href }]} href={href}>
						{label}
					</a>
				</li>
			))
		}
	</ul>
	<div class="socials">
		<a class="social" href="https://twitter.com/me">
			<span class="sr-only">Twitter</span>
			<Icon icon="twitter-logo" />
		</a>
		<a class="social" href="https://www.twitch.tv/me">
			<span class="sr-only">Twitch</span>
			<Icon icon="twitch-logo" />
		</a>
		<a class="social" href="https://github.com/me">
			<span class="sr-only">GitHub</span>
			<Icon icon="github-logo" />
		</a>
		<a class="social" href="https://codepen.io/me">
			<span class="sr-only">CodePen</span>
			<Icon icon="codepen-logo" />
		</a>
		<a class="social" href="https://dribbble.com/me">
			<span class="sr-only">dribbble</span>
			<Icon icon="dribbble-logo" />
		</a>
		<a class="social" href="https://www.youtube.com/@me/">
			<span class="sr-only">YouTube</span>
			<Icon icon="youtube-logo" />
		</a>
	</div>
</nav>

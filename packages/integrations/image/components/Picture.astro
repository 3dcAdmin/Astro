---
import { getPicture } from '../dist/index.js';
import { warnForMissingAlt } from './index.js';
import type { OutputFormat, TransformOptions } from '../dist/index.js';

export interface Props extends TransformOptions, Pick<astroHTML.JSX.ImgHTMLAttributes, 'loading' | 'decoding'> {
	/** Defines an alternative text description of the image. Set to an empty string (alt="") if the image is not a key part of the content (it's decoration or a tracking pixel). */
	alt: string;
	sizes: HTMLImageElement['sizes'];
	widths: number[];
	formats?: OutputFormat[];
}

const {
	src,
	alt,
	sizes,
	widths,
	aspectRatio,
	fit,
	background,
	position,
	formats = ['avif', 'webp'],
	loading = 'lazy',
	decoding = 'async',
	...attrs
} = Astro.props as Props;

if (alt === undefined || alt === null) {
	warnForMissingAlt();
}

const { image, sources } = await getPicture({
	src,
	widths,
	formats,
	aspectRatio,
	fit,
	background,
	position,
});

delete image.width;
delete image.height;
---

<picture>
	{sources.map((attrs) => <source {...attrs} {sizes} />)}
	<img {...image} {loading} {decoding} {alt} {...attrs} />
</picture>

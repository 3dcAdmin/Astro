---
import {format} from 'node:util';
import {yellow, bold} from 'kleur/colors';
import Code from './Code.astro';

export interface Props {
  [key: string]: any
}

// The first prop is both the key & value
const key = Object.keys(Astro.props)[0];
const value = format(Astro.props[key]);
// Log message to console, as well as the browser.
console.debug(`[${yellow(bold('debug'))}] ` + format({[key]: value}));
---
<div style="padding: 4px 16px; background-color: #2e3440ff; overflow-x: auto;">
  <Code lang="js" code={`// <Debug ${key}={...} />\n${value}`} />
</div>
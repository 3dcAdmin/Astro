---
import Layout from '../components/Layout.astro';
---
<Layout>
	<p id="name">Keep Style</p>
	<a id="click" href="/keep-two">go to next page</a>
</Layout>
<script>

	import { builtInSwap } from '../../node_modules/astro/dist/transitions/swap-steps'

	document.addEventListener('astro:before-swap', (e) => {
		e.swap = () => builtInSwap.extended(e.newDocument)
	});

	builtInSwap.extend({
		swapHeadElements(doc, previousSwapHeadElements) {
			const dynamicStyle = document.head.querySelector('style:not(:empty)');
			previousSwapHeadElements(doc); // reuse the built-in implementation
			dynamicStyle && document.head.insertAdjacentElement('afterbegin', dynamicStyle);
		}
	})
</script>

---
import Layout from '../components/Layout.astro';
---
<Layout>
	<section>
		<p id="name">Replace Main Section</p>
		<p>This is the main section</p>
	</section>
	<a id="click" href="/keep-two">go to next page</a>
</Layout>
<script>
	document.addEventListener('astro:before-swap', (e) => {
		// generate a complete swap function by just overriding the swapHeadElements function
		e.swapper.extend({
			swapBodyElement(newElement: Element, oldElement: Element, previousSwapBodyElement) {
				const newMain = newElement.querySelector('main section');
				const oldMain = oldElement.querySelector('main section');
				if (newMain && oldMain) {
					previousSwapBodyElement(newMain, oldMain); // supports persisted elements inside main ;-)
				} else {
					previousSwapBodyElement(newElement, oldElement); // fallback to built-in body swap semantics
				}
			}
		})
	});
</script>

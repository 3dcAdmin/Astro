---
const data = await Astro.glob('../post/**/*');
---

<html>
  <head>
    <title>All Posts</title>
    <link rel="canonical" href={canonicalURL.href} />
  </head>
  <body>
    {data.map((page) => (
      <div>
        <h1 data-file={page.file} />Title</h1>
        <a class="post-url" href={page.url}>Read</a>
      </div>
    ))}
  </body>
</html>

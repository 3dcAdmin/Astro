---
import { getCollection, getDataEntryById } from 'astro:content';

const blog = await getCollection('blog');
const first = await getDataEntryById('blog', 1);
---
<html>
<head>
	<title>Index</title>
</head>
<body>
	<h1>Blog Posts</h1>

	<h2>{first.data.title}</h2>
	<ul>
		{blog.map(post => (
			<li><a href={`/blog/${post.id}`}>{ post.data?.title }</a></li>
		))}
	</ul>
</body>
</html>
